{
  "title": "L-system definitions",
  "description": "A list of L-System Definitions",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "systemName": {
        "type": "string",
        "description": "The unique name of the system"
      },
      "variables": {
        "type": "array",
        "description": "all the variables in the formula so we can determine which variables will actually draw lines",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "object",
          "properties": {
            "varname": {
              "type": "string"
            },
            "isDrawingVariable": {
              "type": "boolean"
            }

          }
        }
      },
      "rules": {
        "type": "array",
        "uniqueItems": true,
        "minItems": 1,
        "items": {
          "type": "string",
          "description": "The formulas governing the L-System"
        }
      },
      "axiom": {
        "type": "string",
        "description": "The first set of chars to be parsed"
      },
      "rotationAngle": {
        "type": "number",
        "default": 45,
        "description": ""
      },
      "nrOfIterationsToDrawAtSelection": {
        "type": "integer",
        "minimum": 1,
        "maximum": 10,
        "description": "The suggested number of iterations to draw when this item is loaded.",
        "default": 3
      },
      "startingAngle": {
        "type": "number",
        "default": 90,
        "description": ""
      },
      "lineLength": {
        "type": "number",
        "default": 10,
        "description": ""
      },
      "lineLengthMultiplier": {
        "type": "number",
        "default": 1,
        "description": ""
      },
      "strokeColor": {
        "type": "string",
        "default": "black",
        "description": "The color used when to draw lines"
      },
      "fadeStrokeOpacity": {
        "enum": [
          "None",
          "Normal",
          "Reverse"
        ],
        "default": "None",
        "description": "Whether to make the lines fade with higher iterations"
      },
      "usePolyline": {
        "type": "boolean",
        "default": false
      },
      "fillPolyline": {
        "type": "boolean",
        "default": false
      },
      "originPosition": {
        "type": "integer",
        "minimum": 0,
        "maximum": 10,
        "default": 1,
        "description": "The type of origin e.g. Center, TopLeft, etc. This is an numeric enum!"
      },
      "originCoordinates2d": {
        "type": "object",
        "description": "If the originPosition is value zero (0), then a set of coordinates must be specified, relative to the canvas' origin (0,0). Notice that the Y-axis positive value go from bottom to top!",
        "properties": {
          "x": {
            "type": "number",
            "default": 0
          },
          "y": {
            "type": "number",
            "default": 0
          }
        },
        "required": ["x","y"]
      },
      "originCoordinates3d": {
        "type": "object",
        "description": "For the 3d renderer the coordinates are different (x,y,z)",
        "properties": {
          "x": {
            "type": "number",
            "default": 0
          },
          "y": {
            "type": "number",
            "default": 0
          },
          "z": {
            "type": "number",
            "default": 0
          }
        },
        "required": ["x","y","z"]
      }

    },
    "required": ["systemName","rules","variables","axiom","rotationAngle","lineLength"]
  }
}
